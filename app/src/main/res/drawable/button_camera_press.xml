<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#FF404040" />
            <corners
                android:radius="5dp" />
            <gradient
                android:startColor="#FFA726"
                android:centerColor="#FF9800"
                android:endColor="#FB8C00"
                android:angle="90" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_camera_alt_black_24dp" />
</layer-list>